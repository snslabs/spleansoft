<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>SecuredWebApp</display-name>
    <description>Secured Web Application</description>
    <servlet>
        <servlet-name>DoServlet</servlet-name>
        <servlet-class>spln.DoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>spln.FormServlet</servlet-class>
        <security-role-ref>
            <role-name>User</role-name>
        </security-role-ref>
    </servlet>
    <servlet>
        <servlet-name>LargeServlet</servlet-name>
        <servlet-class>spln.LargeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmbeddedServlet</servlet-name>
        <servlet-class>spln.EmbeddedServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>PreProcessor</filter-name>
        <filter-class>spln.PreProcessor</filter-class>
    </filter>
    <servlet-mapping>
        <servlet-name>DoServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>*.form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LargeServlet</servlet-name>
        <url-pattern>*.large</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmbeddedServlet</servlet-name>
        <url-pattern>*.em</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>PreProcessor</filter-name>
        <servlet-name>DoServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreProcessor</filter-name>
        <servlet-name>FormServlet</servlet-name>
    </filter-mapping>

    <!-- security -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name></realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?error</form-error-page>
        </form-login-config>
    </login-config>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>all forms</web-resource-name>
            <url-pattern>*.form</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>User</role-name>
        </auth-constraint>

    </security-constraint>

    <security-role>
        <description>simple user with normal privileges</description>
        <role-name>User</role-name>
    </security-role>
    <security-role>
        <description>power user with many priveleges</description>
        <role-name>Manager</role-name>
    </security-role>
    <security-role>
        <description>super user with all priveleges (like God  :-) )</description>
        <role-name>Admin</role-name>
    </security-role>
</web-app>