<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
  <enterprise-beans>
      <session>
          <description>EJB to perform file browsing</description>
          <display-name>FileBrowser</display-name>
          <ejb-name>SessionFileBrowserEJB</ejb-name>
          <home>com.splean.filebrowser.ejb.SessionFileBrowserHome</home>
          <remote>com.splean.filebrowser.ejb.SessionFileBrowser</remote>
          <ejb-class>com.splean.filebrowser.ejb.SessionFileBrowserBean</ejb-class>
          <session-type>Stateful</session-type>
          <transaction-type>Container</transaction-type>
      </session>
  </enterprise-beans>
</ejb-jar>