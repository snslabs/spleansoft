<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
  "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>
        <form-bean name="loginForm" type="com.splean.web.forms.Login"/>
        <form-bean name="uploadForm" type="com.splean.web.forms.Upload" />
    </form-beans>
    <global-forwards>
        <forward name="login" path="/login.do"/>
        <forward name="welcome" path="/welcome.do"/>
        <forward name="panel" path="/panel.do"/>
        <forward name="upload" path="/upload.do"/>
        <forward name="download" path="/download.do"/>
    </global-forwards>
    <action-mappings>
        <action path="/download" type="com.splean.web.actions.DownloadAction"/>
        <action path="/upload"  forward="/pages/panel.jsp" type="com.splean.web.actions.UploadAction" name="uploadForm"/>
        <action path="/welcome" forward="/welcome.jsp"/>
        <action path="/login" name="loginForm" forward="/pages/login.jsp"/>
        <action path="/loginSubimt" name="loginForm" type="com.splean.web.actions.LoginAction"/>
        <action path="/panel" forward="/pages/panel.jsp"/>
    </action-mappings>
</struts-config>